@inherits LayoutComponentBase

<div class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
        <button class="btn btn-light me-2" @onclick="ToggleDrawer">
            <i class="bi bi-list"></i> 
        </button>
        <span class="navbar-brand">My Application</span>
    </div>
</div>

<div class="d-flex">
    <div class="drawer" style="width: @(drawerOpen ? "250px" : "0"); transition: width 0.3s ease;">
        <NavMenu />
    </div>

    <div class="main-content flex-grow-1 px-3">
        @Body
    </div>
</div>

<style>
    .drawer {
        background-color: #f8f9fa;
        overflow: hidden;
        border-right: 1px solid #ddd;
        height: 100vh;
    }

    .main-content {
        padding: 20px;
    }

    .navbar-brand {
        font-size: 1.25rem;
        font-weight: bold;
    }

    .navbar {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
</style>

@code {
    private bool drawerOpen = true;

    private void ToggleDrawer()
    {
        drawerOpen = !drawerOpen;
    }
}
